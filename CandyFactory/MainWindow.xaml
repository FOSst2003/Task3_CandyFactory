<Window x:Class="CandyFactory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:CandyFactory.Models"
        Title="Производство конфет" Height="450" Width="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding Factories}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <ProgressBar Value="{Binding SugarLevel}" Maximum="100" Height="20"/>
                            <TextBlock Text="{Binding Status}"/>
                            <Button Content="Заполнить сахаром" Command="{Binding DataContext.LoadSugarCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Добавить фабрику" Command="{Binding AddFactoryCommand}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>